<!DOCTYPE html>
<html>
<head>
  <title>Inicio Administrador</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
</head>
<body>
  <div class="container">
    <h1 class="my-4 text-center">Inicio Administrador</h1>

    <div class="mb-4">
      <a href="/consultorias" class="btn btn-primary">Consultorias</a>
    </div>

    <div class="mb-4">
      <input type="text" id="search" class="form-control" placeholder="Buscar...">
    </div>

    <table id="userTable" class="table table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>RUT</th>
          <th>ID Consultoria</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<users.length; i++) { %>
          <tr>
            <td><%= users[i].nombre %></td>
            <td><%= users[i].rut %></td>
            <td><%= users[i].id_consultoria || 'No disponible' %></td>
            <td>
              <a href="/editUser/<%= users[i].id_usuario %>" class="btn btn-secondary">Editar</a>
              <a href="/deleteUser/<%= users[i].id_usuario %>" class="btn btn-danger">Eliminar</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <div class="my-4">
      <canvas id="chart"></canvas>
    </div>
  </div>
  <div class="mb-4">
    <a href="/registros" class="btn btn-primary">Ingresar nuevo usuario</a>
  </div>
  <script>
    // Aquí se colocaría el código JavaScript para implementar el buscador

    // Datos de prueba para el gráfico
    var data = {
      labels: ['Aceptadas', 'Rechazadas', 'Analizando'],
      datasets: [{
        data: [10, 20, 30],
        backgroundColor: ['green', 'red', 'yellow']
      }]
    };

    // Crear el gráfico
    var ctx = document.getElementById('chart').getContext('2d');
    new Chart(ctx, {
      type: 'doughnut',
      data: data
    });
  </script>
</body>
</html>
